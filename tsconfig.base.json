{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@chatbot/utils": ["packages/utils/src/index"],
      "@chatbot/utils/*": ["packages/utils/src/*"],
      "@chatbot/app": ["packages/app/src/index"],
      "@chatbot/app/*": ["packages/app/src/*"],
      "@chatbot/libs": ["packages/libs/src/index"],
      "@chatbot/libs/*": ["packages/libs/src/*"],
      "@chatbot/db": ["packages/db/src/index"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmit": true,
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
